<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/head_tire_frg"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/img_bg" />

        <TextView
            android:text="升/100公里"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_unit"
            android:layout_gravity="center|bottom"/>

        <TextView
            android:text="18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="30sp"
            android:layout_gravity="center|bottom"
            android:id="@+id/tv_speed" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="故障码"
                android:minWidth="100dp"
                android:gravity="center"
                android:id="@+id/none1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="有故障码"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_troublecode"
                android:layout_below="@+id/none1"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <View style="@style/divideh"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="瞬时耗油"
                android:gravity="center"
                android:minWidth="100dp"
                android:id="@+id/none2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_launcher"/>

            <TextView
                android:text="5"
                android:gravity="center"
                android:layout_below="@+id/none2"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:id="@+id/tv_secondOil" />
        </RelativeLayout>
        <View style="@style/divideh"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="水温"
                android:minWidth="100dp"
                android:gravity="center"
                android:id="@+id/none3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@mipmap/ic_launcher"/>

            <TextView
                android:text="80℃"
                android:gravity="center"
                android:layout_below="@+id/none3"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_temp" />
        </RelativeLayout>
    </LinearLayout>
    <View style="@style/dividev"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="   蓄电池电压    "
                android:gravity="center"
                android:id="@+id/none4"
                android:minWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@mipmap/ic_launcher"/>

            <TextView
                android:text="8.36v"
                android:gravity="center"
                android:layout_below="@+id/none4"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_oilWeak" />
        </RelativeLayout>
        <View style="@style/divideh"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="  节气门开度   "
                android:minWidth="100dp"
                android:gravity="center"
                android:id="@+id/none5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableTop="@mipmap/ic_launcher"/>

            <TextView
                android:text="18.0%"
                android:gravity="center"
                android:layout_below="@+id/none5"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_space" />
        </RelativeLayout>
        <View style="@style/divideh"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="本次使用油量"
                android:gravity="center"
                android:id="@+id/none6"
                android:minWidth="100dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_launcher"/>

            <TextView
                android:text="11.1L"
                android:gravity="center"
                android:layout_below="@+id/none6"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_speedTra" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>